---
export interface Props {
  name: string;
  info?: string;
  photo: string;
  tags: string[];
}

const { name, info, photo, tags } = Astro.props;
---

<div class="pet-card">
  <img src={photo} alt={name} class="pet-photo">
  <div class="pet-name">{name}</div>
  <div class="pet-species">{info || ""}</div>
  <div class="pet-tags">
    {tags.map(tag => (
      <span class={`tag ${tag.toLowerCase()}`}>{tag}</span>
    ))}
  </div>
</div>

<style>
  .pet-card {
    background: var(--card-bg);
    border: 1px solid var(--card-border);
    border-radius: 15px;
    padding: 30px;
    text-align: center;
    backdrop-filter: blur(10px);
    transition: all 0.3s ease;
    display: flex;
    flex-direction: column;
    align-items: center;
    min-height: 320px; /* Altezza minima fissa per uniformit√† */
  }

  .pet-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 15px 35px rgba(237, 192, 30, 0.2);
    border-color: var(--accent-gold);
  }

  .pet-photo {
    width: 120px;
    height: 120px;
    border-radius: 50%;
    object-fit: cover;
    margin: 0 auto 20px;
    display: block;
    border: 3px solid var(--accent-gold);
    flex-shrink: 0;
  }

  .pet-name {
    font-size: 1.5rem;
    font-weight: 600;
    margin-bottom: 10px;
    color: var(--text-primary);
    flex-shrink: 0;
  }

  .pet-species {
    font-size: 1rem;
    color: var(--text-secondary);
    margin-bottom: 15px;
    min-height: 24px; /* Spazio fisso anche se vuoto */
    flex-shrink: 0;
  }

  .pet-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 8px;
    justify-content: center;
    margin-top: auto; /* Spinge i tag verso il basso */
  }

  .tag {
    padding: 4px 12px;
    border-radius: 20px;
    font-size: 0.85rem;
    font-weight: 500;
    color: white;
  }

  .tag.dog { background: var(--accent-teal); }
  .tag.cat { background: var(--accent-blue); }
  .tag.bird { background: var(--accent-pink); }
  .tag.reptile { background: var(--accent-green); }
  .tag.fish { background: var(--accent-orange); }
  .tag.mammal { background: var(--accent-gold); }
  .tag.exotic { background: linear-gradient(135deg, #ff416c, #8b00ff, #00eaff);; }
</style>