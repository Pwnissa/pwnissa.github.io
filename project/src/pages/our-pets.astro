---
import Layout from '../layouts/Layout.astro';

import PetCard from '../components/PetCard.astro';
import { SITE_TITLE } from '../consts';

const pets = [
  {
    name: "Lupina",
    info: "In loving memory of Lupina, forever in my heart.",
    photo: "/public/img-pets/crop_lupina.jpeg", // Make sure to have these image paths
    tags: ["Dog"],
  },
  {
    name: "Tofu",
    info: "Cat",
    photo: "/images/pets/luna.jpg",
    tags: ["Cat"],
  },
  {
    name: "Pip",
    info: "Parrot",
    photo: "/images/pets/pip.jpg",
    tags: ["Bird", "Exotic"],
  },
  {
    name: "B3n1t0",
    info: "A leopard gecko that loves to hang upside down in its free time",
    photo: "/public/img-pets/B3n1t0.jpg",
    tags: ["Reptile", "Exotic"],
  }
];
---

<Layout title={SITE_TITLE}>

    <div class="team-section">
      <div class="container">
        <h2>Our pets</h2>
        <div class="team-grid">
            {pets.map(pet => (
                <PetCard
                  name={pet.name}
                  info={pet.info}
                  photo={pet.photo}
                  tags={pet.tags}
                />
              ))}
        </div>
      </div>

    </div>

  </Layout>