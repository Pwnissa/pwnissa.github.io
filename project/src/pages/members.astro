---
import Layout from '../layouts/Layout.astro';
import MemberCard from '../components/MemberCard.astro';
import { SITE_TITLE } from '../consts';
import {members} from '../config';


---

<Layout title={SITE_TITLE}>

  <div class="team-section">
    <div class="container">
      <h2>üßë‚Äçüíª All players @ Pwnissa </h2>
      <div class="team-grid">
        {members.map(member => (
          <MemberCard 
            nickname={member.nickname}
            name={member.name}
            photo={member.photo}
            tags={member.tags}
            link={member.link}
          />
        ))}
      </div>
      
      <div class="pets-section">
          <h2 class="pets-heading">üêæ Our Pets </h2>
          <p class="pets-description">As Colette once said, "<i>Our perfect companions never have fewer than four feet</i> ".<br> Meet our beloved pets who brighten our lives every day!</p>
          <a href="/our-pets" class="cta-button">See Our Pets</a>
      </div>
    </div>
  </div>

  </Layout>

  <style>
  .pets-section {
    text-align: center;
    padding: 50px 0; /* Add some vertical padding */
    margin-top: 50px; /* Space from the content above */
    border-radius: 15px;
  }

  .pets-heading {
    font-size: 2.2rem; /* Slightly smaller than main H2 */
    color: var(--accent-gold);
    margin-bottom: 20px;
  }

  .pets-description {
    font-size: 1.1rem;
    color: var(--text-secondary);
    max-width: 700px;
    margin: 0 auto 40px; /* Center text and add space below */
    line-height: 1.6;
  }

  .cta-button {
    background: var(--accent-gold);
  }

  
  </style>
